{
    "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}"
  },
    "builders": [
      {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "eu-west-3",
        "source_ami": "ami-0a0d71ff90f62f72a",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "packer_AWS {{timestamp}}"
      }
    ],
    "provisioners": [
      {
        "type": "shell",
        "inline": ["sleep 30", "sudo apt update", "sudo apt install wordpress -y"]
      }
    ],
    "post-processors": [
      {
        "type": "manifest",
        "output": "output.json"
      }
    ]
  }