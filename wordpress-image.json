{
    "variables": {
        "docker_repository": "{{env `DOCKER_REPOSITORY`}}",
        "registry_username": "{{env `GITHUB_USER`}}",
        "registry_password": "{{env `GITHUB_PASS`}}",
        "github_repo": "{{env `GITHUB_REPO`}}",
        "docker_image": "ubuntu:20.04",
        "docker_image_name": "wordpress-image"
    },
    "builders": [
        {
            "type": "docker",
            "image": "{{user `docker_image`}}",
            "commit": true
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": "echo test"
        }
    ],
    "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "{{user `docker_repository`}}/{{user `github_repo`}}/{{user `docker_image_name`}}",
                "tag": "dev"
            },
            {
                "type": "docker-push",
                "login": true,
                "login_username": "{{user `registry_username`}}",
                "login_password": "{{user `registry_password`}}",
                "login_server": "https://{{user `docker_repository`}}"
            }
        ]
    ]
}